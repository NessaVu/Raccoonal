<html>

<head>
	<title>Raccoonal Calendar</title>

	<!-- CSS -->
	<link rel="stylesheet" href="../css/bootstrap.min.css">
	<link rel="stylesheet" href="../css/style.css">

	<!-- JS -->
	<!--<script src="../js/bootstrap.js"></script>-->
</head>

<body>
	<div class="content calendar">
		<div class="calendarBox">
			<div class="monthBar">
				<button type="button" id="leftButton">&#8592;</button>
				<h2 id="monthText">February</h2>
				<button type="button" id="rightButton">&#8594;</button>
			</div>
			<div class="dateBox">
				<ul class="weekdays">
					<li>Mo</li>
					<li>Tu</li>
					<li>We</li>
					<li>Th</li>
					<li>Fr</li>
					<li>Sa</li>
					<li>Su</li>
				</ul>
				<div class="alldays">
					{{#each dates}}
					<div {{#if today}}class="date today" {{/if}} class="date">
						<p id="dateNumber">{{dateNumber}}</p>
						<img id="emoji" src="../images/Emotions/{{image}}">

						<div class='calendarModal'>
							<div class="top">
								<h5>{{month}}/{{dateNumber}}/2018</h5>
								<img id="emoji" src="../images/Emotions/{{image}}">
							</div>
							<ol class="records">
								{{#records}}
								<li class="record">
									<span class="timeStamp">{{time}}:</span>
									<img id="emoji" src="../images/Emotions/{{emoji}}">
									<div class="recordModal">
									</div>
								</li>
								{{/records}}
							</ol>
							<button type="button" id="closeDiaryButton" class="closebtn">Close</button>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>


	<div class="bar">
		<button type="button" class="menu" id="calendarButton" onclick="window.location='calendar.handlebars'">Calendar</button>
		<button type="button" class="menu" id="bookButton" onclick="window.location='book.handlebars'">Raccoon
			<br>Book</button>
		<button type="button" class="menu" id="homeButton" onclick="window.location='home.handlebars'">Yard</button>
		<button type="button" class="menu" id="emptyButton" disabled>Market
			<br>Coming Soon!</button>
		<button type="button" class="menu" id="settingButton" onclick="window.location='setting.handlebars'">Setting</button>
	</div>


	<script src="../js/jquery-3.3.1.min.js"></script>
	<script>
		var diary;
		$(".date").on("click", function () {
			$(this).find(".calendarModal").show().css('display', 'flex');
		});

		$(".closebtn").on("click", function (e) {
			$(this).parent().hide()
			e.stopPropagation()
		});

		$(".memoBtn").on("click", function (e) {
			$('#memo').show();
			e.stopPropagation();
		});

		$('.closememoBtn').on("click", function (e) {
			$('#memo').hide();
			e.stopPropagation();
		})

	</script>
</body>

</html>